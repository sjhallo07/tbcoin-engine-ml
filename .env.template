# Environment template for TB Coin Engine
# Copy this file to `.env` and fill in secrets / values before running locally.

# Feature flags (safe defaults)
AI_AGENT_ENABLED=false
AI_TRADING_ENABLED=false

# Blockchain / RPC
SOLANA_RPC_URL=https://api.devnet.solana.com

# Database (example placeholders)
DATABASE_URL=postgresql://tbcoin_user:tbcoin_password@localhost:5432/tbcoin_db

# Redis
REDIS_URL=redis://localhost:6379/0

# MLflow (optional)
MLFLOW_TRACKING_URI=http://localhost:5000

# MinIO (optional local object store)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=MINIOACCESSKEY
MINIO_SECRET_KEY=MINIOSECRETKEY

# KMS / Signer (DO NOT STORE PRIVATE KEYS IN REPO)
# Example: set to a KMS resource identifier or leave blank to use local key for dev
KMS_KEY_ID=

# Agent wallet / signer note: for production use a secure KMS/HSM-backed signer.
AUTONOMOUS_TRADING_PRIVATE_KEY=REPLACE_WITH_LOCAL_KEY_FOR_DEV_ONLY

# Logging / Observability
LOG_LEVEL=INFO
