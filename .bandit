[bandit]
# Bandit security scanner configuration
# https://bandit.readthedocs.io/

exclude_dirs = [
    '/tests',
    '/node_modules',
    '/.venv',
    '/venv',
    '/build',
    '/dist'
]

# Skip these test IDs (comma-separated)
skips = []

# Tests to run (leave empty to run all)
tests = []

# Severity level to report (all, low, medium, high)
level = low

# Confidence level to report (all, low, medium, high)
confidence = medium
