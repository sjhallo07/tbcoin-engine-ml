# Application Settings
APP_NAME=TB Coin Engine ML
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Database Configuration
DATABASE_URL=sqlite:///./tbcoin.db
# For PostgreSQL: postgresql://user:password@localhost/tbcoin
# For MongoDB: mongodb://localhost:27017/tbcoin

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Cloud Provider Settings (for serverless deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Coin Engine Settings
INITIAL_COIN_SUPPLY=1000000
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=1000000
TRANSACTION_FEE_PERCENT=0.5
