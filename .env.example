# ============================================================================
# TB Coin Engine ML - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your values
# NEVER commit the actual .env file to version control

# Application Settings
APP_NAME=TB Coin Engine ML
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Node.js Backend Settings
NODE_ENV=development
NODE_PORT=3000
NODE_HOST=0.0.0.0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRY=1h
BCRYPT_ROUNDS=10

# OpenAI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# SQL Database Configuration
DATABASE_URL=sqlite:///./tbcoin.db
# For PostgreSQL: postgresql://user:password@localhost/tbcoin
SQL_POOL_SIZE=10
SQL_MAX_OVERFLOW=20
SQL_POOL_TIMEOUT=30
SQL_ECHO=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/tbcoin
MONGODB_DATABASE=tbcoin
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10
MONGODB_TIMEOUT_MS=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Python Backend URL (for Node.js sync)
PYTHON_BACKEND_URL=http://localhost:8000
PYTHON_BACKEND_TIMEOUT=30000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cloud Provider Settings (for serverless deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Coin Engine Settings
INITIAL_COIN_SUPPLY=1000000
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=1000000
TRANSACTION_FEE_PERCENT=0.5

# CoinGecko API
COINGECKO_DEMO_API_KEY=your-coingecko-demo-key
COINGECKO_PRO_API_KEY=your-coingecko-pro-key
